CC = gcc

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

NAME = school

RM = rm


all: $(NAME)

$(NAME): $(OBJ)
        $(CC) $^ -o $@

%.o: %.c
        $(CC) -c $< -o $@

re: fclean
	make fclean
	make all

clean:
        $(RM) -f *~ $(NAME) *.swp

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) -f *~ *.swp $(OBJ) $(NAME)
