CC = gcc

SRC = main.c school.c

OBJ = $(SRC:.c=.o)

NAME = school

RM = rm


all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $^ -o $@

%.o: %.c
	$(CC) -c $< -o $@

re: fclean
	make fclean
	make all

clean: $(NAME)
	$(RM) -f *~ $(NAME) *.swp

oclean: $(OBJ)
	$(RM) $(OBJ)

fclean: $(OBJ) $(NAME)
	$(RM) -f *~ *.swp $(OBJ) $(NAME)
